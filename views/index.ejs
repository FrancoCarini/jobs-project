<main class="lista-vacantes">
  <h2>Lista Trabajos</h2>
  <% if (jobs.length) { %>
    <% jobs.forEach(job => { %>
      <div class="vacante">
        <div class="caja">
          <h3><%= job.company %></h3>
          <p class="puesto"><%= job.title %></p>
        </div>
        <div class="caja">
          <p class="etiqueta">Ubicacion</p>
          <p class="nombre"><%= job.location %></p>
        </div>
        <div class="caja">
          <p class="etiqueta">Contrato</p>
          <p class="nombre contrato"><%= job.hours %></p>
        </div>
        <div class="caja centrar-vertical">
          <a href="/jobs/<%= job.url %>" class="btn btn-verde">Mas Info</a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No hay trabajos</p>
  <% } %>
</main>